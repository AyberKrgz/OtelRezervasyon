@model HotelReservationApp.Models.Hotel

@{
    ViewData["Title"] = "Hotel Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h2>@Model.Name</h2>
    <p>Location: @Model.Location</p>

    <h3>Reservations</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Start Date</th>
                <th>End Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model.Reservations)
            {
                <tr>
                    <td>@reservation.CustomerName</td>
                    <td>@reservation.StartDate.ToString("d")</td>
                    <td>@reservation.EndDate.ToString("d")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
